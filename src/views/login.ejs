<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>


<body class="detalle">
    <%- include('partials/header') %>

    <main class="detalle__main">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-8 mx-auto mt-5">
                <div class="card mb-3 shadow-lg">
                  <div class="card-header">
                    Ingres치
                  </div>
                  <div class="card-body">
                    <form action="" method="POST" class="row">
                        <div class="col-12 col-md-6 mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control <%= locals.errors && ((errors.email|| errors.password) && 'is-invalid') %>" id="email" placeholder="Tu email" name="email">
                            <small class="text-danger ms-2">
                              <%= locals.errors && (errors.email && errors.email.msg) %>
                            </small>
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <label for="password" class="form-label">Contrase침a</label>
                            <input type="password" class="form-control <%= locals.errors && (errors.password && 'is-invalid') %>" id="password" placeholder="Tu contrase침a" name="password">
                            <small class="text-danger ms-2">
                              <%= locals.errors && (errors.password && errors.password.msg) %>
                            </small>
                        </div>
                        <div class="d-flex justify-content-around">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="remember" name="remember">
                                <label class="form-check-label" for="remember">
                                  Recordarme
                                </label>
                              </div>
                            <button type="submit" class="btn btn-dark">Ingres치</button>
                        </div>
                    </form>
                  </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
    <%- include('partials/scripts') %>

</body>

</html>