<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>


<body class="detalle">
    <%- include('partials/header') %>

    <main class="detalle__main">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-8 mx-auto mt-5">
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-12 col-md-5">
                            <div class="d-flex flex-column gap-1">
                                <img id="main-image" src="/img/products/<%= image %>" class="img-fluid  animate__animated animate__flipInX" alt="...">
                                <div class="d-flex justify-content-between">
                                    <% images.forEach((image,index) => { %>
                                        <img src="/img/products/<%= image %>" width="32%" alt="" class="animate__animated animate__fadeIn animate__delay-<%= index + 1 %>s"
                                        onclick="document.getElementById('main-image').setAttribute('src','/img/products/<%=image%>')">
                                    <% }) %>
                                  
                                </div>
                            </div>

                        </div>
                        <div class="col-12 col-md-7">
                            <div class="card-body">
                                <h5 class="card-title"><%= title %></h5>
                                <p class="card-text"><%= description %></p>
                                <p class="card-text"><small class="text-body-secondary">$<%= price %></small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
    <%- include('partials/scripts') %>

</body>

</html>